# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Basic App Configuration
PROJECT_NAME="FastAPI Starter"
DESCRIPTION="A comprehensive FastAPI scaffolder with best practices"
VERSION="0.1.0"
ENVIRONMENT="development"

# API Configuration
API_V1_STR="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="HS256"

# CORS Configuration
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
ALLOWED_HOSTS="localhost,127.0.0.1"

# Database Configuration
DATABASE_URL="sqlite:///./app.db"
DB_ECHO=false

# Redis Configuration (optional)
# REDIS_URL="redis://localhost:6379/0"

# Email Configuration (optional)
# SMTP_TLS=true
# SMTP_PORT=587
# SMTP_HOST="smtp.gmail.com"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAILS_FROM_EMAIL="your-email@gmail.com"
# EMAILS_FROM_NAME="FastAPI Starter"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_DOCS=true

# ==============================================================================
# LDAP Configuration
# ==============================================================================
# Enable LDAP authentication (set to true to use LDAP)
LDAP_ENABLED=false

# LDAP Server Configuration
# LDAP server address (use ldap:// for non-SSL or ldaps:// for SSL)
# Example: ldap://ldap.example.com or ldaps://secure-ldap.example.com
LDAP_SERVER="ldap://ldap.example.com"

# LDAP server port (389 for LDAP, 636 for LDAPS)
LDAP_PORT=389

# Use SSL/TLS for LDAP connection
LDAP_USE_SSL=false

# LDAP Bind Configuration
# Service account credentials for searching users (can be left empty for anonymous bind)
# Example: cn=admin,dc=example,dc=com
LDAP_BIND_DN="cn=admin,dc=example,dc=com"
LDAP_BIND_PASSWORD="admin-password"

# LDAP Search Configuration
# Base DN for user search (where to start searching for users)
# Example: ou=users,dc=example,dc=com or dc=example,dc=com
LDAP_BASE_DN="ou=users,dc=example,dc=com"

# LDAP search filter for finding users
# Use {username} as a placeholder for the login username
# Common filters:
#   - (uid={username})           - for LDAP/OpenLDAP using uid
#   - (cn={username})             - for some LDAP systems using cn
#   - (sAMAccountName={username}) - for Active Directory
#   - (mail={username})           - if users login with email
LDAP_USER_FILTER="(uid={username})"

# LDAP Attribute Mapping
# Specify which LDAP attributes map to user email and full name
LDAP_ATTR_EMAIL="mail"
LDAP_ATTR_FULLNAME="cn"

# LDAP connection timeout (seconds)
LDAP_TIMEOUT=10

# ==============================================================================
# LDAP Configuration Examples
# ==============================================================================

# Example 1: OpenLDAP with anonymous bind
# LDAP_ENABLED=true
# LDAP_SERVER="ldap://openldap.example.com"
# LDAP_PORT=389
# LDAP_USE_SSL=false
# LDAP_BIND_DN=""
# LDAP_BIND_PASSWORD=""
# LDAP_BASE_DN="ou=people,dc=example,dc=com"
# LDAP_USER_FILTER="(uid={username})"
# LDAP_ATTR_EMAIL="mail"
# LDAP_ATTR_FULLNAME="cn"

# Example 2: Active Directory with SSL
# LDAP_ENABLED=true
# LDAP_SERVER="ldaps://ad.company.com"
# LDAP_PORT=636
# LDAP_USE_SSL=true
# LDAP_BIND_DN="cn=service_account,ou=service_accounts,dc=company,dc=com"
# LDAP_BIND_PASSWORD="service-account-password"
# LDAP_BASE_DN="ou=employees,dc=company,dc=com"
# LDAP_USER_FILTER="(sAMAccountName={username})"
# LDAP_ATTR_EMAIL="mail"
# LDAP_ATTR_FULLNAME="displayName"

